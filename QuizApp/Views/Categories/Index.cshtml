@model IEnumerable<QuizApp.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories:</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
    <a asp-action="TableView" class="btn btn-primary">TableView</a>
</p>

<div class="btn-group-vertical">
    @foreach (var item in Model)
    {
        <button class="btn btn-info" onclick="window.location.href='@Url.Action("QuestionsByCategory", "Categories", new { id = item.Id })'">
            @item.Name
        </button>
    }
</div>
