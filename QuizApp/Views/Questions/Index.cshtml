@model IEnumerable<QuizApp.Models.Question>

@{
    ViewData["Title"] = "Questions";
}

<h1>Questions</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@item.Text</h5>
                    <p class="card-text"><strong>State:</strong> @item.State</p>
                    <p class="card-text"><strong>Category:</strong> @item.Category.Name</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="stretched-link"></a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        position: relative;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.03);
        }

    .stretched-link {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>
